 <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'vertical_user_input' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'vertical_user_input' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'vertical_user_input' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'vertical_user_input' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
<% end %>
